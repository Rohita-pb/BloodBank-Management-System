<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="rohita.example.bloodbank.frontend.controllers.DonorDashboardController"
      alignment="CENTER"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Donor Dashboard" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <Label fx:id="welcomeLabel" style="-fx-font-size:14px;"/>

    <HBox spacing="10">
        <Button text="Update Availability" onAction="#onToggleAvailability"/>
        <Button text="View Profile" onAction="#onViewProfile"/>
    </HBox>

    <Button text="Logout" onAction="#onLogout" style="-fx-text-fill:red;"/>

</VBox>
