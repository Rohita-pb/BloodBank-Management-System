<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="rohita.example.bloodbank.frontend.controllers.LoginController">
    <center>
        <VBox spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Hospital / Donor Login" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login (Donor)" onAction="#onDonorLogin" />
        <Button text="Login (Hospital)" onAction="#onHospitalLogin" />
    </HBox>

    <Separator />

    <HBox alignment="CENTER" spacing="5">
        <Label text="New donor?" />
        <Label text="Hospital?" />
<Hyperlink text="Register Hospital" onAction="#openHospitalRegister"/>

        <Hyperlink text="Register Donor" onAction="#openRegister" />
    </HBox>

    <Label fx:id="statusLabel" textFill="red" />
</VBox>

    </center>
</BorderPane>
