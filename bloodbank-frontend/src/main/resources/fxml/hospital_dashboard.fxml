<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="rohita.example.bloodbank.frontend.controllers.HospitalDashboardController"
      alignment="CENTER"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Hospital Dashboard" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <TextField fx:id="searchBloodGroup" promptText="Enter Blood Group (A+)" />

    <Button text="Search Donors" onAction="#onSearch" />

    <ListView fx:id="donorList" prefHeight="200" prefWidth="250" />

    <Button text="Logout" onAction="#onLogout" style="-fx-text-fill:red;" />

</VBox>

